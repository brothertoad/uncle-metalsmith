{% extends "layout.njk" %}

{% block body %}
  {% include "partials/navbar.njk" %}

  {# This is where we put build-specific stuff. #}
  <div class="build-title-div">
    <h1 class="build-title">{{ title  | safe }}</h1>
  </div>
  {% if scalematesUrl %}
  <div class="build-scalemates-div">
    {{ 'scalemates.com link' | linkTo(scalematesUrl) | safe }}
  </div>
  {% endif %}
  {% if boxartUrl %}
  <p>
    <img class="boxart" src="{{ boxartUrl }}" alt="boxart">
  </p>
  {% endif %}
  {{ contents | safe }}
  <div class="row-parent">
    <div class="tl column-25">
      {% if previousUrl %}
        {{ 'Previous' | linkTo(previousUrl) | safe }}
      {% endif %}
    </div>
    <div class="tc column-50">
      Build completed {{ completionDate }}.
    </div>
    <div class="tr column-25">
      {% if nextUrl %}
        {{ 'Next' | linkTo(nextUrl) | safe }}
      {% endif %}
    </div>
  </div>
{% endblock %}
